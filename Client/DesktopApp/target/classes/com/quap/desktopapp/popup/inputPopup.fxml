<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="background" stylesheets="@../../styles/colors.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.popup.InputPopupController">
    <bottom>
        <ButtonBar styleClass="ground" BorderPane.alignment="CENTER">
            <buttons>
            <Button mnemonicParsing="false" onAction="#submit" text="Submit" />
                <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closePopup" text="Close" />
            </buttons>
        </ButtonBar>
    </bottom>
    <top>
        <HBox styleClass="ground" BorderPane.alignment="CENTER">
            <children>
                <Label text="InputPopup" />
            </children>
        </HBox>
    </top>
   <center>
      <TextField fx:id="userInput" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
