<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.popup.PopupController">
    <center>
        <ScrollPane fx:id="scrollContent" minHeight="200.0" minWidth="400.0" prefHeight="200.0" prefWidth="400.0" />
    </center>
    <bottom>
        <ButtonBar BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closePopup" text="Close" />
            </buttons>
        </ButtonBar>
    </bottom>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Popup" />
         </children>
      </HBox>
   </top>
</BorderPane>
