<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.scene.MainWindowController">
    <BorderPane VBox.vgrow="ALWAYS">
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <StackPane fx:id="stackContent" VBox.vgrow="ALWAYS" />
            </VBox>
        </center>
        <left>
            <VBox BorderPane.alignment="CENTER">
                <VBox alignment="CENTER" VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#friends" text="Friends" />
                        <Button mnemonicParsing="false" onAction="#chatrooms" text="Chatrooms" />
                        <Button mnemonicParsing="false" onAction="#profil" text="Profil" />
                        <Button mnemonicParsing="false" onAction="#settings" text="Settings" />
                    </children>
                </VBox>
                <VBox fx:id="vBoxButtonHolder" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" />
            </VBox>
        </left>
        <bottom>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <Label alignment="CENTER" text="Quap" HBox.hgrow="NEVER" />
                <Pane  HBox.hgrow="ALWAYS" />
                <Label fx:id="lblServer_IP" text="Server IP" HBox.hgrow="SOMETIMES" />
            </HBox>
        </bottom>
        <top>
            <HBox BorderPane.alignment="CENTER">
                <MenuBar HBox.hgrow="ALWAYS">
                    <Menu mnemonicParsing="false" text="Connection">
                        <MenuItem mnemonicParsing="false" text="Disconnect" />
                        <MenuItem mnemonicParsing="false" text="Reconnect" />
                        <MenuItem mnemonicParsing="false" text="Status Information" />
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem mnemonicParsing="false" text="About" />
                        <MenuItem mnemonicParsing="false" text="Tutorial" />
                        <MenuItem mnemonicParsing="false" text="Project&amp;Source" />
                    </Menu>
                </MenuBar>
                <ButtonBar HBox.hgrow="NEVER">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#maximize" text="O" />
                        <Button mnemonicParsing="false" onAction="#minimize" text="_" />
                        <Button mnemonicParsing="false" onAction="#close" text="X" />
                    </buttons>
                </ButtonBar>
            </HBox>
        </top>
    </BorderPane>
</VBox>
