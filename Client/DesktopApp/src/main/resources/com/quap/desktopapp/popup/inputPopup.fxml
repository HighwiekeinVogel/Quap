<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<BorderPane minHeight="100.0" minWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.popup.InputPopupController">
    <bottom>
        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
            <Button alignment="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#submit" text="Submit" HBox.hgrow="NEVER" />
            <Button fx:id="btnClose" alignment="CENTER" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#closePopup" text="Close" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
    <top>
        <HBox styleClass="ground" BorderPane.alignment="CENTER">
            <Label fx:id="header" text="InputPopup" />
        </HBox>
    </top>
   <center>
      <TextField fx:id="userInput" BorderPane.alignment="CENTER" />
   </center>
   <stylesheets>
      <URL value="@../../styles/colors.css" />
      <URL value="@../../styles/layouts.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="background" />
      <String fx:value="popup" />
   </styleClass>
</BorderPane>
