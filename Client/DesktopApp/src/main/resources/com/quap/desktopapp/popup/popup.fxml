<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import java.lang.String?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.popup.PopupController">
    <center>
        <ScrollPane fx:id="scrollContent" minHeight="200.0" minWidth="400.0" prefHeight="200.0" prefWidth="400.0" styleClass="foreground" />
    </center>
    <bottom>
        <ButtonBar BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnClose" mnemonicParsing="false" onAction="#closePopup" text="Close" />
            </buttons>
        </ButtonBar>
    </bottom>
   <top>
       <HBox styleClass="ground" BorderPane.alignment="CENTER">
           <Label text="Popup"/>
       </HBox>
   </top>
   <stylesheets>
      <URL value="@../../styles/colors.css" />
      <URL value="@../../styles/layouts.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="background" />
      <String fx:value="popup" />
   </styleClass>
</BorderPane>
