<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="background" stylesheets="@../../styles/colors.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.popup.RequestPopupController">
    <top>
        <HBox styleClass="ground" BorderPane.alignment="CENTER">
            <children>
                <Label text="Popup" />
            </children>
        </HBox>
    </top>
   <center>
      <TextField fx:id="txtDisplay" editable="false" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAccept" mnemonicParsing="false" onAction="#accept" text="Accept" />
            <Button fx:id="btnDecline" mnemonicParsing="false" onAction="#decline" text="Decline" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
