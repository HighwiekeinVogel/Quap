<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox styleClass="background" stylesheets="@../../styles/colors.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.scene.MainWindowController">
    <BorderPane VBox.vgrow="ALWAYS">
        <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <StackPane fx:id="stackContent" styleClass="foreground" VBox.vgrow="ALWAYS" />
            </VBox>
        </center>
        <left>
            <VBox styleClass="ground" stylesheets="@../../styles/colors.css" BorderPane.alignment="CENTER">
                <VBox alignment="CENTER" VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#friends" text="Friends" />
                        <Button mnemonicParsing="false" onAction="#chatrooms" text="Chatrooms" />
                        <Button mnemonicParsing="false" onAction="#profil" text="Profil" />
                        <Button mnemonicParsing="false" onAction="#settings" text="Settings" />
                    </children>
                </VBox>
                <VBox fx:id="vBoxButtonHolder" alignment="TOP_CENTER" VBox.vgrow="ALWAYS" />
            </VBox>
        </left>
        <bottom>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <Label alignment="CENTER" text="Quap" textFill="WHITE" HBox.hgrow="NEVER" />
                <Pane styleClass="background" HBox.hgrow="ALWAYS" />
                <Label fx:id="lblServer_IP" text="Server IP" textFill="WHITE" HBox.hgrow="SOMETIMES" />
            </HBox>
        </bottom>
        <top>
            <HBox styleClass="background" BorderPane.alignment="CENTER">
                <MenuBar styleClass="background" HBox.hgrow="ALWAYS">
                    <Menu mnemonicParsing="false" text="Connection">
                        <MenuItem mnemonicParsing="false" text="Disconnect" />
                        <MenuItem mnemonicParsing="false" text="Reconnect" />
                        <MenuItem mnemonicParsing="false" text="Status Information" />
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <MenuItem mnemonicParsing="false" text="About" />
                        <MenuItem mnemonicParsing="false" text="Tutorial" />
                        <MenuItem mnemonicParsing="false" text="Project&amp;Source" />
                    </Menu>
                </MenuBar>
                <ButtonBar HBox.hgrow="NEVER">
                    <buttons>
                  <HBox maxHeight="1.7976931348623157E308">
                     <children>
                              <Button mnemonicParsing="false" onAction="#maximize" text="O" HBox.hgrow="NEVER" />
                              <Button mnemonicParsing="false" onAction="#minimize" text="_" HBox.hgrow="NEVER" />
                              <Button mnemonicParsing="false" onAction="#close" text="X" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                    </buttons>
                </ButtonBar>
            </HBox>
        </top>
    </BorderPane>
</VBox>
