<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<VBox maxHeight="360.0" maxWidth="480.0" minHeight="360.0" minWidth="480.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quap.controller.scene.LoginWindowController">
   <Label fx:id="headerLabel" text="Quap" textFill="WHITE" VBox.vgrow="NEVER" />
   <StackPane fx:id="vistaHolder" styleClass="foreground" VBox.vgrow="ALWAYS" />
   <CheckBox fx:id="checkAnonymMode" mnemonicParsing="false" onAction="#switchMode" text="Anonym Mode" textFill="WHITE" VBox.vgrow="NEVER" />
   <HBox alignment="CENTER" styleClass="loginScreen" VBox.vgrow="SOMETIMES">
      <children>
         <Button fx:id="btnLogin" minHeight="20.0" minWidth="40.0" mnemonicParsing="false" onAction="#login" text="Login" />
      </children>
   </HBox>
   <stylesheets>
      <URL value="@../../styles/colors.css" />
      <URL value="@../../styles/layouts.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="background" />
      <String fx:value="loginScreen" />
   </styleClass>
</VBox>
